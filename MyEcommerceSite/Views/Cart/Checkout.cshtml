
    @{ 
        ViewBag.Title = "RoyalSports: Checkout";
    }
<h2>Royal Sports Check out</h2>
<p>Please Enter your correct details below for shipping purposes</p>
<h3>Your Billing Amount is:</h3>


@using (Html.BeginForm())
{
    @Html.ValidationSummary()
    <center>
        <h3>Please Provide Your Billing Details</h3>
    </center>
        <table border='0' width='480px' cellpadding='0' cellspacing='0' align='center'>
            @model MyEcommerce.Domain.Entities.ShippingDetails
            <div>
                <tr>
                    <td>Name:</td>
                    <td>@Html.EditorFor(x => x.Name)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td><h3>Address</h3></td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>Line1:</td>
                    <td>@Html.EditorFor(x => x.Line1)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>Line2:</td>
                    <td>@Html.EditorFor(x => x.Line2)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>Line3:</td>
                    <td>@Html.EditorFor(x => x.Line3)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>City: </td>
                    <td>@Html.EditorFor(x => x.City)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>State: </td>
                    <td>@Html.EditorFor(x => x.State)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>ZipCode: </td>
                    <td>@Html.EditorFor(x => x.Zip)</td>
                </tr>
            </div>
            <div>
                <tr>
                    <td>Country: </td>
                    <td>@Html.EditorFor(x => x.Country)</td>
                </tr>
            </div>

        </table>
            <h3>Options</h3>
            <label>
                @Html.EditorFor(x => x.GiftWrap)
                Coupon Code, <b>Please type "Yes" or "No"</b>
            </label>
            <p align="center">
                <input class="actionButtons" type="submit" value="Complete order">
            </p>
}

